<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"

        card_view:contentPaddingBottom="9dp"
        android:id="@+id/cardView"
        card_view:cardCornerRadius="9dp"
        card_view:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_top"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/linearLayout">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:id="@+id/imageIcon"
                        android:background="@drawable/face_black"/>

                    <TextView
                        android:id="@+id/authorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:text="Jenifer"
                        android:textColor="#DE000000" />

                </LinearLayout>

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:text="Задание"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#DE000000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:clickable="true"
                        android:id="@+id/iconMoreInfo"
                        android:layout_gravity="right"
                        android:background="@drawable/info_drawable"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewStatus"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/layout_top">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:id="@+id/statusView"
                    android:background="@color/black_divider" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/viewStatus"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:layout_marginLeft="3dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewText"
                        android:textColor="#8D000000"
                        android:text="New w TexNew TexNew TexNw TexNew TexNew TexNw TexNew TexNew TexNw TexNew TexNew TexNw TexNew TexNew TexNw TexNew TexNew TexNTexNew TexNew TexNew TexNew TexNew TexNew Text"
                        android:id="@+id/textViewTaskInfo" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left">

                        <ImageView
                            android:layout_width="39dp"
                            android:layout_height="39dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:id="@+id/iconDelete"
                            android:background="@drawable/clear_black"/>

                    </RelativeLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingEnd="5dp"
                    android:layout_weight = "0.8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layoutDateFinish"
                        android:clickable="true"
                        android:padding="3dp"
                        android:orientation="vertical">


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/black_divider"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#DE000000"
                            style="@style/TextViewText"
                            android:layout_marginTop="5dp"
                            android:text="Дата Завершения:"
                            android:id="@+id/textViewD" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textColor="#8D000000"
                            style="@style/TextViewText"
                            android:layout_marginBottom="5dp"
                            android:text="__-__-____"
                            android:id="@+id/textViewDataFinish" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/black_divider"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layoutDateStart"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:padding="3dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/black_divider"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#DE000000"
                            android:layout_marginTop="5dp"
                            style="@style/TextViewText"
                            android:text="Дата Начала:"
                            android:id="@+id/textView23" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:textColor="#8D000000"
                            android:layout_marginBottom="5dp"
                            style="@style/TextViewText"
                            android:text="Текущая"
                            android:id="@+id/textViewDataStart" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/black_divider"/>

                        </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>






</LinearLayout>