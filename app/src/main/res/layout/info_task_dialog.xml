<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание:"
        android:id="@+id/textView2"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:gravity="center"
        android:text="ОписаниеОписание задачОписание задачОпие задачОписание задачОписание задачОпие задачОписание задачОписание задачОпие задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задачОписание задач задачи"
        android:id="@+id/textViewInfo"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Список людей в задаче:"
        android:textColor="@color/black"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textViewInfo"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:id="@+id/listFriendsInTask"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buttonOk"
        android:layout_below="@+id/textView3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonOk"
        android:text="OK"/>

</RelativeLayout>