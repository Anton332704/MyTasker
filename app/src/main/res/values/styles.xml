<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MenuStyle" parent="Widget.AppCompat.ListView.Menu">
        <item name="android:background">@color/left_menu</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity"> center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ItemLeftStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#DDDDDD</item>
    </style>

    <style name="ButtonEnter" parent="Base.Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextViewReg" parent="Base.V12.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">4</item>
    </style>
</resources>
